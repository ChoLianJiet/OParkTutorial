<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.opark.opark">

    <!-- Uses permission -->

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission
        android:name="android.permission.LOCATION_HARDWARE"
        tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW"/>

    <!-- FACEBOOK META DATA ELEMENT -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- GOOGLE LOCATION SERVICE META DATA -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_api_key"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts"/>

        <activity
            android:name=".login_auth.LoginActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".card_swipe.MainActivityCardSwipe"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".motion_vehicle_tracker.Map">
        </activity>
        <activity android:name=".RegisterActivity"/>
        <activity android:name=".UserProfileSetup">
        </activity>
        <activity
            android:name=".UserPopUp"
            android:theme="@style/AppTheme.CustomTheme">
        </activity>
        <activity
            android:name=".NoUserPopUp"
            android:theme="@style/AppTheme.CustomTheme">
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="Opark"/>
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

            <category android:name="android.intent.category.DEFAULT"/>
            <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="@string/fb_login_protocol_scheme"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".share_parking.MapsMainActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_maps_main"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".LoadingScreen">
        </activity>
        <activity
            android:name=".KenaMap"
            android:configChanges="orientation"
            android:label="@string/title_activity_maps_main"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".PeterMap"
            android:configChanges="orientation"
            android:label="@string/title_activity_maps_main"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ProfileEdit">
        </activity>
        <activity android:name=".splash_screen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".login_auth.PhoneAuth">
        </activity>
        <activity android:name=".login_auth.EmailLogin">
        </activity>
        <activity android:name=".RewardsFragment">
        </activity>
        <activity android:name="merchant_all.merchant_prof.MerchantProfileSetup">
        </activity>
        <activity android:name=".merchant_side.MerchProfileSetup">
        </activity>
        <activity android:name=".login_auth.MerchWaitingApproval">
        </activity>
        <activity android:name=".merchant_side.MerchActivity">
        </activity>
        <activity android:name=".merchant_side.MerchUploadOfferActivity">
        </activity>
        <activity android:name=".InsufficientPointsDialog">
        </activity>
    </application>

</manifest>


