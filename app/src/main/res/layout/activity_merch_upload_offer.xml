<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
 >

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="80dp"
            android:layout_height="0dp"

            android:orientation="vertical"

            >


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginBottom="10dp"
                android:text="Please Select an Image" />

            <ImageButton
                android:id="@+id/offer_picture"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@color/brightPeach"
                android:clickable="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/maintenance_squareboi"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="50dp"
                android:paddingTop="40dp">

                <EditText
                    android:id="@+id/offer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:hint="Offer Title"/>

                <EditText
                    android:id="@+id/offer_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:clickable="true"
                    android:maxLines="1"
                    android:focusable="false"
                    android:hint="Category"
                    />

                <EditText
                    android:id="@+id/points_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:hint="Redemption amount (enter 500-2000)"/>


                <EditText
                    android:id="@+id/offer_expiry_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:maxLines="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Expiry Date"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="50dp"
                >


                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"

                    />

                <Button
                    android:id="@+id/upload_offer_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="Upload"
                    android:theme="@style/AppTheme"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

