<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
 >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            >

            <ImageButton
                android:id="@+id/offer_picture"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@color/brightPeach"
                android:clickable="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/maintenance_squareboi"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="50dp"
                android:paddingTop="40dp">

                <EditText
                    android:id="@+id/offer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:hint="Offer Title"/>

                <EditText
                    android:id="@+id/points_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:hint="Redemption amount (enter 500-2000)"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                    android:id="@+id/upload_offer_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="60dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="Upload"
                    android:theme="@style/AppTheme"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

