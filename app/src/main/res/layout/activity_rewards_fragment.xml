<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    tools:context=".RewardsFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/merchant_offer_card_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:id="@+id/merchant_offer_image"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/maintenance_squareboi"
                />

            <TextView
                android:id="@+id/merchant_offer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/merchant_offer_image"
                android:text="Offer Title"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/merchant_name"
                android:text="Merchant Name"
                android:layout_toEndOf="@+id/merchant_offer_image"
                android:layout_below="@+id/merchant_offer_title"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/merchant_address"
                android:text="Merchant Address"
                android:layout_toEndOf="@+id/merchant_offer_image"
                android:layout_below="@+id/merchant_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/merchant_number"
                android:text="Merchant Number"
                android:layout_toEndOf="@+id/merchant_offer_image"
                android:layout_below="@+id/merchant_address"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/redeem_cost"
                android:text="1000"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/merchant_offer_title"
                />

            <Button
                android:id="@+id/redeem_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/merchant_number"
                android:layout_alignParentEnd="true"
                android:background="@drawable/rounded_layout_background"
                android:text="Redeem"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>