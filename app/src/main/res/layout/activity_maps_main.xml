<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recenter_button"
        android:layout_toEndOf="@+id/progress_bar"
        android:text="Sign Out"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/share_parking_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:text="Share"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/find_parking_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/share_parking_button"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:text="Search"
        android:textSize="20dp"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context=".share_parking.MapsMainActivity"/>

    <FrameLayout

    android:id="@+id/popupuser"
    android:layout_width="match_parent"
    android:layout_height="270dp"/>

    <!--<fragment-->
        <!--android:id="@+id/popupuser"-->
        <!--android:name="com.opark.opark.UserPopUpFragment"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="270dp"-->
        <!--android:layout_above="@+id/progress_bar"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginBottom="-215dp"-->
        <!--android:layout_marginStart="0dp"/>-->


    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="110dp"
        android:layout_height="104dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:background="@drawable/home01_bg_card"
        android:indeterminateDrawable="@drawable/loading"
        android:max="100"
        android:progress="20"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/recenter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/share_parking_button"
        android:layout_marginBottom="130dp"
        android:clickable="true"
        app:backgroundTint="@color/cardview_light_background"
        app:srcCompat="@mipmap/ic_launcher_foreground"/>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/bottom_sheet_sorry"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            app:behavior_hideable="false"
            app:behavior_peekHeight="80dp"
            android:clickable="false">


            <TextView
                android:id="@+id/sorry"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:text="We Apologize that currently our app only operates in SS15 area"
                android:textSize="25dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>