<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/ScrollView01"
            android:theme="@style/AppTheme"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:fillViewport="true"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context=".merchant_side.MerchActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/merch_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:layout_marginStart="16dp"
        android:text="Sign Out" />


    <Spinner
        android:layout_marginTop="75dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/which_offer_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"/>





    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Your discount offer has been redeemed"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/amount_redeemed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:layout_marginStart="100dp"
        android:textSize="100sp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="end"
        android:layout_marginEnd="50dp"
        android:text="times"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/code1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="2"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:layout_marginStart="6dp"
            />
        <EditText
            android:id="@+id/code2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="2"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"

            android:inputType="textCapCharacters"
            android:layout_marginStart="6dp"
            />
        <EditText
            android:id="@+id/code3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="2"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"

            android:inputType="textCapCharacters"
            android:layout_marginStart="6dp"
            />
        <EditText
            android:id="@+id/code4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="2"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"

            android:inputType="textCapCharacters"
            android:layout_marginStart="6dp"
            android:imeOptions="actionNext"
            />
        <EditText
            android:id="@+id/code5"
            android:textAlignment="center"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="2"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="textCapCharacters"
            android:layout_marginStart="6dp"
            android:imeOptions="actionNext"
            />
        <EditText
            android:id="@+id/code6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="2"
            android:textAlignment="center"

            android:maxLength="1"
            android:maxLines="1"
            android:inputType="textCapCharacters"
            android:layout_marginStart="6dp"
            android:imeOptions="actionNext"
            />



    </LinearLayout>







    <EditText android:id="@+id/pin_hidden_edittext"
        android:layout_marginTop="10dp"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:focusableInTouchMode="false"
        android:background="@null"
        android:inputType="textCapCharacters"
        android:cursorVisible="false"
        android:maxLength="6"
        android:elevation="1dp"
        android:textColor="#00000000"
        android:contentDescription="Hidden" />


    <TextView
        android:id="@+id/error_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong code. Please try again."
        android:textColor="@color/font_red_accent"
        android:visibility="invisible"
        android:layout_gravity="center"

        />







