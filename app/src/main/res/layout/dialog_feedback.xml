<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="8dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/feedback_upper_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp">

            <LinearLayout
                android:id="@+id/selectedEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/emojiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/mako"
                    android:text="Good!"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/feedback_prompt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback_prompt_text"
                android:fontFamily="@font/mako"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:visibility="visible"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/emojiList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="28dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/feedback_upper_container">

            <ImageView
                android:id="@+id/vomitEmoji"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/speechless_squareboi" />

            <ImageView
                android:id="@+id/sadEmoji"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/not_satisfied_squareboi" />

            <ImageView
                android:id="@+id/neutralEmoji"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/mehhh_squareboi"
                android:layout_marginLeft="6dp" />

            <ImageView
                android:id="@+id/happyEmoji"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/satisfied_squareboi"
                android:layout_marginLeft="6dp" />

            <ImageView
                android:id="@+id/loveEmoji"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/very_satisfied_squareboi"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/feedback_description_container"
            android:layout_below="@id/emojiList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone">

            <View
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="22dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/userCommentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="28dp"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_send_black_24dp"
                android:hint="Describe why"
                android:drawableTint="@android:color/darker_gray"
                android:gravity="center"
                android:fontFamily="@font/mako"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>